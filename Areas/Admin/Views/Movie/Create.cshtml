@model ExtremeInsiders.Entities.Movie

@{
    var baseIdIsReadOnly = ViewData.ContainsKey("BaseIdIsReadOnly") && (bool)ViewData["BaseIdIsReadOnly"];
}

<h1>Создание</h1>

<h4>Фильм</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SportId" class="control-label">Вид спорта</label>
                <select readonly="@baseIdIsReadOnly" asp-for="SportId" class="form-control" asp-items="ViewBag.SportId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>