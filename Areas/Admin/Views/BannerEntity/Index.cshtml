@using ExtremeInsiders.Entities
@using ExtremeInsiders.Helpers
@model IEnumerable<ExtremeInsiders.Entities.BannerEntity>

<h1>Баннер</h1>

<p>
    <a asp-action="Create">Добавить слайд</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Id
        </th>
        <th>
            Заголовок
        </th>
        <th>
            Id связанного объекта
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Id)
            </td>
            <td>
                @Html.DisplayFor(model => item.OfCulture(Culture.Russian).Content.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.EntityId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>