@model ExtremeInsiders.Entities.BannerEntity

<h1>Создание</h1>

<h4>Баннер</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EntityId" class="control-label">Id связанного объекта (необязательно)</label>
                <input asp-for="EntityId" class ="form-control" />
            </div>
            <p style="font-style: italic; color: darkgrey" >* Данные будут взяты из уже существующего объекта, который вы указали. Это может быть вид спорта, плейлист, видео или фильм.</p>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

