@model ExtremeInsiders.Entities.Sport

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sport</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="ImageId" class="control-label">Image</label>
                <img style="max-width: 200px" src="@Model.Image.Path" />
                <input class="mt-3" accept="image/x-png,image/gif,image/jpeg" type="file" name="imageSrc"/>
                <span asp-validation-for="ImageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>