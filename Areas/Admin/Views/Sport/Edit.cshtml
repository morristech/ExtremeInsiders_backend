@using ExtremeInsiders.Data
@model ExtremeInsiders.Entities.Sport
@inject ApplicationContext Db

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование</h1>

<h4>Вид спорта</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <h3 class="mb-3">ID: @Model.Id</h3>
            <div class="form-group">
                <label asp-for="ImageId" class="control-label">Image</label>
                <img style="max-width: 200px" src="@Model.Image.Path" />
                <input class="mt-3" accept="image/x-png,image/gif,image/jpeg" type="file" name="imageSrc"/>
                <span asp-validation-for="ImageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    <div>
        <h3>Связанные локализации</h3>
        @if (Model.Translations.Count > 0)
        {
            <table class="table">
                <thead>
                <tr>
                    <th>
                        Язык
                    </th>
                    <th>
                        Название
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Translations) {
                    <tr>
                        <td>
                            @item.Culture.Key
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="SportTranslation" asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                            <a asp-area="Admin" asp-controller="SportTranslation" asp-action="Delete" asp-route-id="@item.Id" asp->Удалить</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <h6>Нет локализаций</h6>
        }
        @if (Model.Translations.Count < Db.Cultures.Count())
        {
            <a asp-area="Admin" asp-controller="SportTranslation" asp-action="Create" asp-route-id="@Model.Id">Добавить локализацию</a>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>